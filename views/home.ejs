<h1>
        Codiel / <%= title %>
</h1>
<section>
        <h4>Posts</h4>
        <% if (locals.user) { %>
         
                <form action="/post/create" method="post">
                        <textarea name="content" cols="30" rows="3" placeholder="Type Here... " required></textarea>
                        <input type="submit" value="Post">
                </form>
        <% } %>

</section>

<div>
        <ul>
                <% for( post of posts) { %>
                        <li>

                                <p> <%= post.content %> <br>
                                        <small>
                                                <%= post.user.name %>
                                        </small>
                                </p>
                                <div>
                                        <% if (locals.user) { %>
                                                <form action="/comments/create" method="post">
                                                        <input type="text" name="content" placeholder="Add comment" id="" required>
                                                        <input type="hidden" name="post" value="<%= post._id %>">
                                                        <input type="submit" value="Post Comment" id="">
                                                </form>
                                        <% } %>
                                </div>
                                <div>
                                        <ul>

                                                <% for( comment of post.comment ) { %>
                                                        <li>

                                                                <p>
                                                                        <%= comment.content %> 
                                                                        <br>
                                                                        <small>
                                                                                <%= comment.user.name %> 
                                                                        </small>
        
                                                                </p>
                                                        </li>
                                                <% } %>  
                                        </ul>
                                </div>
                        </li>



                <% } %>
        </ul>
</div>
  
